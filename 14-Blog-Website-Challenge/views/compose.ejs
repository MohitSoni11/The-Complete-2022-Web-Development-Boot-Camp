<%- include("partials/header"); -%>
  <h1>Compose</h1>
  
  <form action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="composeTitle">
    </div>

    <div class="form-group">
      <label>Post</label>
      <textarea class="form-control" name="composeText" rows="7"></textarea>
    </div>    

    <button class="btn btn-primary" role="button" type="submit">Publish</button>
  </form>
<%- include("partials/footer"); -%>